{
  "name": "bsix-com",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "BSix.com - Premier League Big 6 Match Preview Site",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"src/**/*.{ts,js}\" --fix",
    "lint:check": "eslint \"src/**/*.{ts,js}\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "validate:data": "npm run schema:validate",
    "generate:types": "json2ts -i schemas/*.json -o src/types/generated/",
    "schema:validate": "ajv validate -s schemas/match.schema.json -d \"data/fixtures/*.json\" && ajv validate -s schemas/team.schema.json -d \"data/teams/*.json\" && ajv validate -s schemas/player.schema.json -d \"data/players/*.json\"",
    "release": "semantic-release",
    "prepare": "husky install",
    "lighthouse": "lhci autorun",
    "build:static": "mkdir -p dist && cp -r assets data *.html dist/ && echo 'Static build complete'",
    "serve:static": "npm run build:static && npx serve dist -l 5000"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@eslint/js": "^9.8.0",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.45.0",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "ajv": "^8.17.0",
    "ajv-cli": "^5.0.0",
    "axe-playwright": "^2.2.2",
    "eslint": "^9.8.0",
    "globals": "^15.8.0",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "json-schema-to-typescript": "^13.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "semantic-release": "^22.0.0",
    "serve": "^14.2.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bigGYZstar/BSix.com.git"
  },
  "keywords": [
    "premier-league",
    "football",
    "soccer",
    "match-preview",
    "big-6",
    "typescript",
    "vite"
  ],
  "author": "BSix.com Team",
  "license": "MIT"
}
