{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "fixture.schema.json",
  "title": "Fixture",
  "description": "試合データのスキーマ定義",
  "type": "object",
  "required": ["fixtureId", "league", "round", "dateJST", "venue", "home", "away", "timeline", "keyPoints"],
  "properties": {
    "_meta": {
      "type": "object",
      "description": "メタデータ（出典等）",
      "properties": {
        "source": {
          "type": "string",
          "description": "データ出典"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "最終更新日時"
        },
        "version": {
          "type": "string",
          "description": "データバージョン"
        }
      }
    },
    "fixtureId": {
      "type": "string",
      "description": "試合ID（YYYY-MM-DD-home-away形式）",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}-[a-z]{3}-[a-z]{3}$"
    },
    "league": {
      "type": "string",
      "description": "リーグ名",
      "minLength": 1
    },
    "round": {
      "type": "string",
      "description": "ラウンド（第1節、準々決勝等）",
      "minLength": 1
    },
    "dateJST": {
      "type": "string",
      "description": "試合日時（JST）",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}$"
    },
    "venue": {
      "type": "string",
      "description": "会場名",
      "minLength": 1
    },
    "home": {
      "$ref": "team.schema.json",
      "description": "ホームチーム"
    },
    "away": {
      "$ref": "team.schema.json",
      "description": "アウェイチーム"
    },
    "timeline": {
      "type": "array",
      "description": "試合の展開・タイムライン",
      "items": {
        "type": "object",
        "required": ["time", "phase", "desc"],
        "properties": {
          "time": {
            "type": "string",
            "description": "時間（前半、後半、90分等）"
          },
          "phase": {
            "type": "string",
            "description": "フェーズ（開始、前半、後半、延長、終了等）",
            "enum": ["開始", "前半", "後半", "延長前半", "延長後半", "PK戦", "終了"]
          },
          "desc": {
            "type": "string",
            "description": "イベント説明",
            "minLength": 1
          },
          "team": {
            "type": "string",
            "description": "関連チーム（home/away）",
            "enum": ["home", "away"]
          },
          "player": {
            "type": "string",
            "description": "関連選手名"
          },
          "type": {
            "type": "string",
            "description": "イベントタイプ",
            "enum": ["goal", "assist", "card", "substitution", "other"]
          }
        }
      }
    },
    "keyPoints": {
      "type": "array",
      "description": "試合のキーポイント",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "weather": {
      "type": "object",
      "description": "天候情報",
      "properties": {
        "condition": {
          "type": "string",
          "enum": ["晴れ", "曇り", "雨", "雪", "霧"]
        },
        "temperature": {
          "type": "number",
          "description": "気温（摂氏）"
        },
        "humidity": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "湿度（%）"
        }
      }
    },
    "referee": {
      "type": "object",
      "description": "主審・副審情報",
      "properties": {
        "main": {
          "type": "string",
          "description": "主審名"
        },
        "assistants": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "副審名"
        }
      }
    }
  }
}
